{
  "manifest_version": 3,
  "name": "H1B Sponsor Checker",
  "version": "0.1.0",
  "description": "Check if a company sponsored H1B this year and view basic role stats.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_title": "H1B Sponsor Checker",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
